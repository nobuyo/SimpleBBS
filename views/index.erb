<div class="container">

<h1>SimpleBBS</h1>

<hr>

<div id="posts">
  <% @posts.each do |p| %>
    <div class="post">
      <div class="post-info"><%= p.id %>:<span><%= p.user_name %>(<%= p.posted_at %>)</span></div>
      <div class="message"><%= p.message %>
        <div class="text-right">
          <form method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="hidden" name="id" value="<%= p.id %>" />
            <input type="submit" id="" class="btn-sm btn-default" value="del" />
          </form>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="forms" class="text-center">
  <form method="POST">
    <div class="form-group">
      <label>Message</label>
      <input  class="form-control" type="text" name="mess" placeholder="入力してください" value="">
    </div>
    <div class="form-group">
      <label>Username</label>
      <input type="text" name="user_name" class="form-control" placeholder="your name">
    </div>
<!--     <div class="form-group">
      <label>Delete key</label>
      <input type="email" class="form-control" name="del_key" placeholder="XXXX">
    </div> -->
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>

</div>