<div class="container">

<h1 class="text-center">SimpleBBS</h1>

<div id="posts">
  <% @posts.each do |p| %>
    <div >
      <%= p.user_name %><%= p.posted_at %>
      <%= p.message %>
    </div>
  <% end %>
</div>

<div id="forms">
  <form method="POST">
      <input type="text" name="mess" placeholder="入力してください" value="">
      <input type="text" name="user_name" placeholder="ユーザー名" value="">
      <input type="submit" value="投稿">
  </form>
</div>

</div>