<div class="container">

<h1 class="text-center">SimpleBBS</h1>

<div id="posts">
  <% @posts.each do |p| %>
    <ul>
      <li><%= p.id %></li>
      <ul>
        <li><%= p.user_name %></li>
        <li><%= p.message %></li>
      </ul>
    </ul>
  <% end %>
</div>

<div id="forms" class="text-center">
  <form method="POST">
    <div class="form-group">
      <label>Message</label>
      <input  class="form-control" type="text" name="mess" placeholder="入力してください" value="">
    </div>
    <div class="form-group">
      <label>Username</label>
      <input type="text" name="user_name" class="form-control" placeholder="your name">
    </div>
    <div class="form-group">
      <label>Delete key</label>
      <input type="email" class="form-control" name="del_key" placeholder="XXXX">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>

</div>